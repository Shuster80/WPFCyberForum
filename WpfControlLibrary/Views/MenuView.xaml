<UserControl x:Class="WpfControlLibrary.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary.Views" 
             
             xmlns:vm="clr-namespace:WpfControlLibrary.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top" Background="LightGray">
            <MenuItem Header="ShowUniversity">
                <Button Content="ShowUniversity" Command="{Binding ShowUniversity}"/>
            </MenuItem>
            <MenuItem Header="ShowCourse">
                <Button Content="ShowCourse" Command="{Binding ShowCourse}"/>
            </MenuItem>
            <MenuItem Header="ShowCategory">
                <Button Content="ShowCategory" Command="{Binding ShowCategory}"/>
            </MenuItem>
            <MenuItem Header="ShowTag">
                <Button Content="ShowTag" Command="{Binding ShowTag}"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
